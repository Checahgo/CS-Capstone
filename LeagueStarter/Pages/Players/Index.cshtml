@page
@model IndexModel
@using League.Models


<!-- To-Do list -->
<!-- 
    color change on hover
    gold background if on favorite team
    team and position dropdowns
    dropdown for sorting by 3 columns
    bold text for starters (depth = 1)
-->
<div class="jumbotron">
    <h1 class="display-4">Players</h1>
    <p class="lead">This is a list of all players in the league.</p>
    <hr class="my-4">
    <p>Click on a player to see more details.</p>
    <p class="lead">
        <a class="btn btn-primary btn-lg" href="/Players/Create" role="button">Add Player</a>
    </p>
    <form>
       <input type="text" id="search" placeholder="Search for a player..." asp-for="SearchString" onchange="this.form.submit();">
       <select class="form-control" asp-for="SortField" onchange="this.form.submit();">
        <option value="Name">Name</option>
        <option value="Team">Team</option>
        <option value="Position">Position</option>
        </select>
        <select class="form-control" asp-for="SelectedPosition" asp-items="Model.Positions" onchange="this.form.submit();">
            <option value="">None</option>
        </select>
    </form>
    
</div>

<!-- Player Table -->
<div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Team</th>
                <th scope="col">Position</th>
                <th scope="col">Depth</th>
                <th scope="col">Age</th>
                <th scope="col">Height</th>
                <th scope="col">Weight</th>
                <th scope="col">College</th>
                <th scope="col">Years Pro</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var player in Model.Players)
            {
                <tr>
                    <td>@player.Name</td>
                    <td>@player.TeamId</td>
                    <td>@player.Position</td>
                    <td>@player.Depth</td>
                    <td>@player.Age</td>
                    <td>@player.Height</td>
                    <td>@player.Weight</td>
                    <td>@player.College</td>
                    <td>@player.Experience</td>
                </tr>            
            }
